<% if notice.present? %>
  <div id="notice"> 
    <div class="alert alert-warning" >
      <strong><%= notice %></strong>
    </div>
  </div>
<% end %>
<h1>Listing Movies Searching</h1>
<div class="row ml-3">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3 justify-content-center">
      <div class="thumbnail">
        <%=link_to (image_tag movie.image.url(:medium), class: "image"), movie_path(movie)%>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'New Movie', new_movie_path , class: "btn btn-primary ml-3 mt-3"%>
<script>
  setTimeout(() => {
    document.getElementById('notice').innerHTML = ""
  }, 3000);
</script>